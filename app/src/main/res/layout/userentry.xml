<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation ="4dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@android:color/holo_blue_dark"
    android:layout_margin="16dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="8dp"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/img_extra"
            android:src="@drawable/ic_baseline_person_24"
            android:background="@color/white"
            tools:ignore="MissingConstraints" />

        <LinearLayout

            android:id="@+id/linear_extra"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/img_extra"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:maxLines="1"
                android:layout_marginStart="3dp"
                android:id="@+id/name_extra"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:text="Name"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/mail_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="Mail"
                android:textColor="@color/white"
                android:textSize="21sp"
                tools:ignore="MissingConstraints" />
            <TextView
                android:layout_marginStart="3dp"
                android:id="@+id/number_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number"
                android:textColor="@color/white"
                android:textSize="21sp"/>
            <TextView
                android:id="@+id/pro_extra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="profession"
                android:layout_marginStart="3dp"
                android:textColor="@color/white"
                android:textSize="21sp">

            </TextView>
            <TextView
                android:id="@+id/gory_extra"
                android:layout_width="match_parent"
                android:text="category"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="@color/white"
                android:textSize="24dp"/>
            <TextView
                android:layout_marginStart="3dp"
                android:id="@+id/year_extra"
                android:layout_width="match_parent"
                android:text="years"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:textSize="21sp"/>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/msg_extra"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/linear_extra"
            android:layout_marginStart="5dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/img_extra"
            android:text="message"
            android:layout_height="wrap_content"/>



    </androidx.constraintlayout.widget.ConstraintLayout>










</androidx.cardview.widget.CardView>