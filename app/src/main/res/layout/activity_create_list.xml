<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".createList"
    android:background="@color/white"
    android:layout_margin="20dp">


    <TextView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter your details"
        android:textColor="@color/black"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/name"
        android:layout_below="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full name:"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:paddingBottom="2sp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="InvalidId,MissingConstraints" />

    <EditText
        android:id="@+id/text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bg"
        android:drawablePadding="20sp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
     />

        <TextView
            android:id="@+id/mail"
            android:layout_below="@+id/text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:text="Email:"
            android:textSize="20dp"
            tools:ignore="InvalidId,MissingConstraints" />

        <EditText
            android:id="@+id/MaILe"
            android:layout_below="@id/mail"
            android:layout_marginStart="15sp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="20sp"
            android:textColor="@color/black"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColorHint="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/contact"
        android:layout_below="@+id/MaILe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact number:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="InvalidId,MissingConstraints" />

    <EditText
        android:id="@+id/conta"
        android:layout_below="@id/contact"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bg"
        android:drawablePadding="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/profession"
        android:layout_below="@+id/conta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter profession:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="InvalidId,MissingConstraints" />


    <EditText
        android:id="@+id/professional"
        android:layout_below="@id/profession"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bg"
        android:drawablePadding="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/catego"
        android:layout_below="@+id/professional"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose category:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="InvalidId,MissingConstraints" />

    <EditText
        android:id="@+id/choose"
        android:layout_below="@id/catego"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bg"
        android:drawablePadding="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/experience"
        android:layout_below="@+id/choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Years of experience:"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        tools:ignore="InvalidId,MissingConstraints" />

    <EditText
        android:id="@+id/Exp"
        android:layout_below="@id/experience"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/input_bg"
        android:drawablePadding="20sp"
        android:textColor="@color/black"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Exp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Create List"
        />
</RelativeLayout>